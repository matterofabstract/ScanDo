{
  "name": "scando",
  "main": "electron/main.ts",
  "version": "0.0.1",
  "description": "computer vision (CV) scanner that gets stuff done.",
  "private": true,
  "author": {
    "name": "Abstractly, LLC",
    "email": "services@abstractly.io",
    "url": "https://abstractly.io"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "validate": "svelte-check",
    "electron": "wait-on http://localhost:5000 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@tsconfig/svelte": "^1.0.10",
    "@types/node": "^15.3.0",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-fetch": "^1.7.3",
    "html5-qrcode": "^2.0.3",
    "less": "^4.1.1",
    "postcss": "^8.2.15",
    "postcss-load-config": "^3.0.1",
    "rollup": "^2.48.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "svelte": "^3.38.2",
    "svelte-check": "^1.5.4",
    "svelte-devtools-standalone": "git+https://github.com/RedHatter/svelte-devtools-standalone.git",
    "svelte-icons": "^2.1.0",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.1.2",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.0"
  },
  "build": {
    "appId": "com.abstractly.scando",
    "productName": "ScanDo",
    "copyright": "Copyright Â© 02021 ${author}",
    "icon": "electron/assets/icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "matterofabstract",
        "repo": "ScanDo",
        "private": false
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "public/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "electron/assets"
    },
    "dmg": {
      "background": "electron/assets/background.tiff",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "extraMetadata": {
      "main": "electron/main.ts"
    }
  }
}
